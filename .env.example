# FastestLOL True Static-First Environment Configuration
# ====================================================

# 🔑 Riot Games API Configuration
# Required: Get your API key from https://developer.riotgames.com/
RIOT_API_KEY=RGAPI-your-api-key-here
RIOT_API_KEY_BACKUP=RGAPI-backup-key-here

# 🌍 Regional Settings
TARGET_REGION=jp1
ACCOUNT_REGION=asia

# 📁 Build Configuration
OUTPUT_DIR=.
CACHE_DIR=./data

# 🐛 Debug Settings (Local Development Only)
DEBUG_MODE=false
VERBOSE_LOGGING=false

# 🚀 Performance Configuration
SW_CACHE_VERSION=auto
BUILD_NUMBER=auto

# 🎯 Production Settings (GitHub Actions)
DEPLOYMENT_ENVIRONMENT=production
ENABLE_PERFORMANCE_AUDIT=true
ENABLE_SECURITY_SCAN=false

# 📊 Monitoring & Analytics (Optional)
ANALYTICS_ID=
SENTRY_DSN=

# 🔧 Advanced Configuration
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# 📈 Data Quality Thresholds
MIN_SAMPLE_SIZE=30
MIN_WIN_RATE_DIFF=0.06
CONFIDENCE_LEVEL=0.95

# 🖼️ Image Optimization
IMAGE_QUALITY=85
ENABLE_WEBP=false
IMAGE_CACHE_DURATION=86400000

# 🔄 Cache Strategy
CACHE_STRATEGY=cache-first
CACHE_DURATION=3600
OFFLINE_FALLBACK=true
EOF < /dev/null